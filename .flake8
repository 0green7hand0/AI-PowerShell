[flake8]
# Maximum line length
max-line-length = 127

# Maximum complexity
max-complexity = 10

# Exclude directories
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    venv,
    env,
    .venv,
    backup,
    build,
    dist,
    *.egg-info

# Ignore specific error codes
ignore =
    # E203: whitespace before ':'
    E203,
    # W503: line break before binary operator
    W503,
    # E501: line too long (handled by black)
    E501

# Select error codes to check
select = E,W,F,C

# Show source code for errors
show-source = True

# Show statistics
statistics = True

# Count errors
count = True
