# AI PowerShell Assistant Configuration Template
# This is the main configuration file for the AI PowerShell Assistant
# Copy this file to your configuration directory and modify as needed

# AI Model Configuration
model:
  # Type of AI model to use: "llama-cpp", "ollama", "transformers"
  model_type: "llama-cpp"
  
  # Path to the AI model file (for llama-cpp) or model name (for ollama)
  model_path: "~/.ai-powershell-assistant/models/default.gguf"
  
  # Maximum context length for the model
  context_length: 4096
  
  # Temperature for text generation (0.0 = deterministic, 2.0 = very creative)
  temperature: 0.7
  
  # Maximum number of tokens to generate
  max_tokens: 512
  
  # Number of GPU layers to use (0 = CPU only)
  gpu_layers: 0
  
  # Number of CPU threads to use
  threads: 4

# Security Configuration
security:
  # Path to security whitelist configuration
  whitelist_path: "~/.ai-powershell-assistant/config/security_whitelist.json"
  
  # Enable Docker sandbox for command execution
  sandbox_enabled: true
  
  # Docker image to use for sandbox
  sandbox_image: "mcr.microsoft.com/powershell:latest"
  
  # Require user confirmation for administrative commands
  require_confirmation_for_admin: true
  
  # Path to security audit log
  audit_log_path: "~/.ai-powershell-assistant/logs/audit.log"
  
  # Maximum memory for sandbox containers
  max_sandbox_memory: "512m"
  
  # Maximum CPU usage for sandbox containers
  max_sandbox_cpu: "1.0"
  
  # Timeout for sandbox execution (seconds)
  sandbox_timeout: 300

# Logging Configuration
logging:
  # Log level: "debug", "info", "warning", "error", "critical"
  log_level: "info"
  
  # Log format: "json", "text", "structured"
  log_format: "json"
  
  # Log outputs: ["file", "console", "syslog", "elasticsearch"]
  log_output: ["file", "console"]
  
  # Path to audit log file
  audit_log_path: "~/.ai-powershell-assistant/logs/audit.log"
  
  # Path to performance log file
  performance_log_path: "~/.ai-powershell-assistant/logs/performance.log"
  
  # Maximum log file size before rotation
  max_log_file_size: "100MB"
  
  # Number of days to retain log files
  log_retention_days: 30
  
  # Enable correlation ID tracking across requests
  enable_correlation_tracking: true
  
  # Enable masking of sensitive data in logs
  sensitive_data_masking: true

# Storage Configuration
storage:
  # Directory for storing application data
  data_directory: "~/.ai-powershell-assistant/data"
  
  # Maximum number of command history entries to keep
  history_max_entries: 10000
  
  # Path to user preferences file
  preferences_file: "~/.ai-powershell-assistant/data/user_preferences.json"
  
  # Directory for caching temporary data
  cache_directory: "~/.ai-powershell-assistant/cache"
  
  # Enable automatic backups
  backup_enabled: true
  
  # Backup interval in hours
  backup_interval_hours: 24

# PowerShell Execution Configuration
execution:
  # Default timeout for command execution (seconds)
  default_timeout: 60
  
  # Maximum output size to capture (bytes)
  max_output_size: 1048576  # 1MB
  
  # PowerShell executable path (auto-detected if empty)
  powershell_executable: ""
  
  # Additional environment variables for PowerShell execution
  environment_variables: {}
  
  # Default working directory (current directory if empty)
  working_directory: ""

# MCP Server Configuration
mcp_server:
  # Host to bind the MCP server to
  host: "localhost"
  
  # Port for the MCP server
  port: 8000
  
  # Maximum number of concurrent requests
  max_concurrent_requests: 10
  
  # Request timeout in seconds
  request_timeout: 300
  
  # Enable CORS for web clients
  enable_cors: true
  
  # Allowed CORS origins
  cors_origins: ["*"]
  
  # Enable individual MCP tools
  enable_natural_language_tool: true
  enable_execute_command_tool: true
  enable_system_info_tool: true

# Global Settings
# Enable debug mode (increases log verbosity)
debug_mode: false

# Target platform: "windows", "linux", "macos" (auto-detected if not specified)
platform: ""

# Application version
version: "0.1.0"